datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

// --- Enums ---
enum Role {
  USER
  ADMIN
  FARMER
  INVESTOR
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

// --- User model ---
model User {
  id                    String           @id @default(uuid())
  email                 String           @unique
  password              String
  role                  Role             @default(USER) // current assigned role
  requestedRole         Role?            // role user applied for
  verificationStatus    VerificationStatus @default(PENDING)
  profileStage          Int              @default(0) // 0-started, 1-personal, 2-role-specific, 3-documents, 4-completed
  profileCompletionPct  Int              @default(0)
  profile               Profile?
  permissions           UserPermission[]
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @default(now()) @updatedAt
}

// --- Profile model ---
model Profile {
  id          String   @id @default(uuid())
  firstName   String?
  lastName    String?
  phone       String?
  roleSpecific Json?    // role-specific info (Farmer / Investor)
  documents    Json?    // uploaded documents metadata
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

// --- Permission model ---
model Permission {
  id        String           @id @default(uuid())
  key       String           @unique
  users     UserPermission[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

// --- UserPermission model ---
model UserPermission {
  id           String     @id @default(uuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  permission   Permission @relation(fields: [permissionId], references: [id])
  permissionId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([userId, permissionId])
}

// --- Product model ---
model Product {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  price     Float
  image     String?
  imageId   String?
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
