datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  profile  Profile?
}

model Profile {
  id        String  @id @default(uuid())
  firstName String?
  lastName  String?
  phone     String?
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
}
