datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

// Enum for user roles
enum Role {
  ADMIN
  FARMER
  INVESTOR
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  role     Role     @default(INVESTOR)  // default role
  profile  Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Profile {
  id        String  @id @default(uuid())
  firstName String?
  lastName  String?
  phone     String?
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}
